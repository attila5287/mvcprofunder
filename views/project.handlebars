<style>
  .fa-donate {
    font-size: 2rem;
  }

  .icona {
    font-size: 2rem;
  }
</style>
<blockquote class="blockquote">
  <p class="text-reg text-secondary text-center font-italic mb-0">
    <i class="text-xl fas fa-cog fa-spin"></i>
    Selected project waiting to be funded, click on buttons to see funding status or contact info:
  </p>
</blockquote>
<div class="container-fluid pt-4">
  <h5 class="my-4 font-italic text-center text-secondary opac-70">
    <i class="icona fas fa-calendar-check text-xl"></i>
    Created at {{format_date pro.date_created}}</h5>
  <h1 class="title text-primary">
    <i class="fas fa-rocket text-dark bg-primary p-2 rounded-xl opac-50"></i>
    <u>
      {{pro.name}}
    </u>
  </h1>
  <p class="font-italic text-secondary text-lg my-4 mr-5">
    <i class="fas fa-quote-left text-2xl fa-pull-left text-primary opac-70"></i>
    {{pro.description}}
    <i class="fas fa-quote-right text-2xl fa-pull-right text-primary opac-70"></i>
  </p>
  <div class="progress bg-secondary p-0 my-4">
    <div class="progress-bar progress-bar-striped progress-bar-animated" style="width:
      {{calculate_progress pro.needed_funding pro.collected_funding}}%" role="progressbar"
      aria-valuenow="{{calculate_progress pro.needed_funding pro.collected_funding
      }}" aria-valuemin="0" aria-valuemax="100">
      <div class="ml-1 text-reg text-dark text-center">
        <b>
          {{calculate_progress pro.needed_funding pro.collected_funding}}%
        </b>
      </div>
    </div>
  </div>
  <hr class="border-success my-4">
  <div id="pro_fund{{pro.id}}" class="my-2">
    <div class="d-flex flex-row justify-content-around text-success my-4">
      <span>
        <i class="icona fas fa-money-check-alt text-xl"></i>
        <i class="text-secondary">
          Needed:
          {{format_amount pro.needed_funding}}
        </i>
      </span>
      <span>
        <i class="icona fas fa-hand-holding-usd text-xl"></i>
        <i class="text-secondary">
          Collected:
          {{format_amount pro.collected_funding}}
        </i>
      </span>
    </div>

    <div class="d-flex flex-row justify-content-around opac-70 mb-2">
      <button class="btn btn-outline-success border-0" type="button">
        <i class="fas fa-donate"></i>
        5
      </button>
      <button class="btn btn-outline-success border-0" type="button">
        <i class="fas fa-donate"></i>
        10
      </button>
      <button class="btn btn-outline-success border-0" type="button">
        <i class="fas fa-donate"></i>
        20
      </button>
      <button class="btn btn-outline-success border-0" type="button">
        <i class="fas fa-donate"></i>
        50
      </button>
      <button class="btn btn-outline-success border-0" type="button">
        <i class="fas fa-donate"></i>
        100
      </button>
    </div>
  </div>

  <hr class="border-info my-4">

  <div id="pro_user{{pro.id}}" class="my-2">
    <h1 class="text-info mb-4 text-center">
      <i class="title text-xl fas fa-address-book"></i>
      {{pro.user.name}}
    </h1>
    <div class="text-center ">
      <a class="text-secondary text-lg my-4">
        <i class="far fa-envelope text-xl mr-3"></i>
        {{pro.user.email}}
      </a>

    </div>
  </div>

  <hr class="my-4 border-dark border-med" />

</div>
