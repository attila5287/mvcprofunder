<form method="POST" action="/api/users" class="text-primary text-xl font-italic">
  <div class="form-group">
    <h1>
      <i class="title fas fa-user-plus bg-primary text-dark p-1 rounded-xl"></i>
      <u>
        Sign Up
      </u>
    </h1>
  </div>
  <div class="form-group">
    <label for="name">
      <i class="fas fa-user"></i>
      Name
    </label>
    <input class="form-control form-control-lg form-control-dark" type="text" name="name" placeholder="Type username here"  />
  </div>

  <div class="form-group">
    <label for="email">
      <i class="fas fa-envelope"></i>
      Email
    </label>
    <input class="form-control form-control-lg form-control-dark" type="email" name="email" placeholder="Type email here..."/>
  </div>
  <div class="form-group">
    <label for="password">
      <i class="fas fa-key"></i>
      Password
    </label>
    <input class="form-control form-control-lg form-control-dark" type="password" name="password" placeholder="Type password here..."/>
  </div>
  <div class="form-group">
    <input class="btn btn-primary btn-block btn-lg" type="submit"  value="Create account"/>
  </div>

</form>

<form
  method="POST"
  action="/api/users/login"
  class="text-info text-xl font-italic"
>
  <div class="form-group">
    <h1>
      <i class="title fas fa-user-plus bg-info text-dark p-1 rounded-xl"></i>
      <u>
        Login
      </u>
    </h1>
  </div>
  <div class="form-group">
    <label for="email">
      <i class="fas fa-envelope"></i>
      Email
    </label>
    <input
      class="form-control form-control-lg form-control-dark"
      type="email"
      name="email"
      placeholder="Type email here..."
    />
  </div>
  <div class="form-group">
    <label for="password">
      <i class="fas fa-key"></i>
      Password
    </label>
    <input
      class="form-control form-control-lg form-control-dark"
      type="password"
      name="password"
      placeholder="Type password here..."
    />
  </div>
  <div class="form-group">
    <input
      class="btn btn-info btn-block btn-lg"
      type="submit"
      value="Login to your account"
    />
  </div>
</form>
