{{#each all as |pro|}}
<h2>
    <i class="fas fa-rocket"></i>
    {{pro.name}}
    <span class="float-right">
        <i class="text-reg">
            <span>
            <i class="fas fa-money-check-alt"></i>
             Needed: {{pro.needed_funding}}
            </span>
            <span>
            <i class="fas fa-money-check-alt"></i>
             Collected: {{pro.collected_funding}}
            </span>
        </i>
    </span>
</h2>
<p class="font-italic">
{{pro.description}}
</p>
<p class="font-italic">

</p>

<div class="progress mb-2">
      <div
        class="progress-bar bg-primary"
        style="width: {{calculate_progress pro.needed_funding pro.collected_funding}}%"
        role="progressbar"
        aria-valuenow="{{calculate_progress pro.needed_funding pro.collected_funding}}"
        aria-valuemin="0"
        aria-valuemax="100"
      >
      <span class="text-light">
          <b>
              <i>
        {{calculate_progress pro.needed_funding pro.collected_funding}}% funded

              </i>

          </b>

      </span>
      </div>
    </div>
<button class="btn btn-outline-primary btn-block" data-target="#user{{pro.user_id}}" data-toggle="collapse" aria-expanded="false" aria-controls="user{{pro.user_id}}">
    <i class="fas fa-chevron-down"></i>
    Show User Details
</button>
<div id="user{{pro.user_id}}" class="collapse container-fluid">
    <h4>
    {{pro.user.name}}  

    </h4>
    {{pro.user.email}}
</div> 
<hr class="my-4 border-primary">
{{/each}}
